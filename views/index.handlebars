{{!------------------------------------ IMAGE SPACE ---------------------------------------}}
  <section class="hero ">
    <div class="hero-body">
      <div class="container">
        <div class="columns">
          <div class="column is-8 is-offset-2">
            <div class="card-img-top" style="width: 100%">
              <img id="homelogo" style="boder-radius: 1em; border: 1px solid black; width: 75%" 
                  src="https://res.cloudinary.com/dhqsixgmo/image/upload/v1665144349/blog-it-images/th_t3adyl.jpg" 
                    alt="placeholder image"/>
