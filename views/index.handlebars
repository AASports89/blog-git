          </div>
        </div>
{{!------------------------------------- POST SPACE --------------------------------------------}}
<section class="section">
  <div class="columns">
    <div class="column is-8 is-offset-2" style="padding-top: 5%">
      <div class="card" style="width: 100%; padding-top: 3%; text-align: center">
        <h1 class="title"><a href="/edit/{{posts.0.0.id}}">{{posts.0.0.title}}</a></h1>
        <img class="card-img-top" src="{{posts.0.0.image}}" alt="Card image">
      <div class="card-body">
        <h2>{{format_date posts.0.0.createdAt}}</h2>
        <h6>by {{posts.0.0.user.username}}</h6>
        <p class"card-text">{{posts.0.0.content}}</p>
      </div>
      </div>
    </div>
  </div>
</section>
{{!------------------------------------ *END* POST SPACE *END* ----------------------------------}}
<div class="is-divider"></div>
      </div>
    </div>
  </section>
  {{!--------------------------------------------- POST MAP ----------------------------------------------}}
  <section class="hero ">
    <div class="hero-body-neg">
      <div class="container">
        {{#each posts as |post|}}
          {{#if @first}}
           
          {{else}}
            {{> post-summary}}
          {{/if}}
        {{/each}}
      </div>
    </div>
  </section>
